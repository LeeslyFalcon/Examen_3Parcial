 {{> header}}
 <div class="container">
  <h1>Pintores</h1>
  {{#if pintores}}
      <table class="table table-dark table-hover">
      <thead>
          <tr>
              <td>ID</td>
              <td>Nombre</td>
              <td>Corriente</td>
              <td>Nacionalidad</td>
              <td>Pintura</td>
          </tr>
      </thead>
      <tbody>
        {{#each pintores}}  
          <tr>
              <td>{{_id}}</td>
              <td>{{nombre}}</td>
              <td>{{corriente}}</td>
              <td>{{nacionalidad}}</td>
              <td><img src="../imagenes/{{pintura}}" width="200" height="200"></td>
          </tr>
        {{/each}}
      </tbody>
      </table>
  {{ else}}
      <div>No se encuestran pintores</div>
  {{/if}}
 </div>
 {{>footer}}
 